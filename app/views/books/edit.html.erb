<div><%= flash[:notice] %></div>
<h1>Editing Book</h1>
<% if @book.errors.any? %>
<%= @book.errors.count %> error was made
<ul>
<% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
<% end %>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book'%>
<% end %>

<table>
<tr>
<th>
<%= link_to "show", book_path(@book.id) %>
</th>
<th>|</th>
<th>
<%= link_to "back", books_path %>
</th>
</tr>
</table>